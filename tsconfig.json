{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/lib",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [".ng_build"]
}
